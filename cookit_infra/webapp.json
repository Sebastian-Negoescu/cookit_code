{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "prefix": {
            "type": "string"
        },
        "location": {
            "type": "string"
        },
        "aspRef": {
            "type": "string"
        },
        "psqlHost": {
            "type": "string"
        },
        "dbName": {
            "type": "string"
        },
        "dbUser": {
            "type": "string"
        },
        "dbPass": {
            "type": "string"
        },
        "psqlServerName": {
            "type": "string"
        }
    },
    "variables": {
        "webappName": "[concat(parameters('prefix'), '-webapp')]"
    },
    "resources": [
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2019-08-01",
            "name": "[variables('webappName')]",
            "location": "[parameters('location')]",
            "kind": "app",
            "properties": {
                "name": "[variables('webappName')]",
                "siteConfig": {
                    "linuxFxVersion": "PYTHON|3.8",
                    "alwaysOn": true,
                    "appSettings": [
                        {
                            "name": "SCM_DO_BUILD_DURING_DEPLOYMENT",
                            "value": "true"
                        },
                        {
                            "name": "DBHOST",
                            "value": "[parameters('psqlHost')]"
                        },
                        {
                            "name": "DBUSER",
                            "value": "[concat(parameters('dbName'), '@', parameters('psqlServerName'))]"
                        },
                        {
                            "name": "DBPASS",
                            "value": "[parameters('dbPass')]"
                        },
                        {
                            "name": "DBNAME",
                            "value": "[parameters('dbName')]"
                        },
                        {
                            "name": "DJANGO_ENV",
                            "value": "production"
                        }
                    ]
                },
                "clientAffinityEnabled": false,
                "serverFarmId": "[parameters('aspRef')]"
            }
        }
    ],
    "outputs": {
        "webappId": {
            "type": "string",
            "value": "[resourceId('Microsoft.Web/sites', variables('webappName'))]"
        },
        "webappName": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Web/sites', variables('webappName'))).Name]"
        },
        "webappDefaultHostName": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Web/sites', variables('webappName'))).DefaultHostName]"
        }
    }
}